# EditorConfig 配置文件
root = true

# 所有文件
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab

# Python
[*.py]
indent_size = 4

# YAML
[*.{yaml,yml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2

# Dart
[*.dart]
indent_size = 2

# Rust
[*.rs]
indent_size = 4

